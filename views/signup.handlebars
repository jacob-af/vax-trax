<div class="bg-gradient-su">
    <div class="row">
        <img id="logo" src="assets/img/VaxTrax_logo2.png" alt="VaxTrax Logo">
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="card" id="form-card">
                    <h2>Sign Up Form</h2>
                    <form class="signup">
                        <div class="form-group">
                            <label for="exampleInputEmail1" id="form-text">Email address</label>
                            <input type="email" class="form-control" id="email-input" placeholder="Email"
                                aria-label="Enter email">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1" id="form-text">Password</label>
                            <input type="password" class="form-control" id="password-input" placeholder="Password"
                                aria-label="Enter password">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1" id="form-text">Confirm Password</label>
                            <input type="password" class="form-control" id="password-confirm"
                                placeholder="Confirm-Password" aria-label="Confirm password">
                        </div>
                        <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Error:</span> <span class="msg"></span>
                        </div>
                        <button type="submit" class="btn btn-default" id="button">Sign Up</button>
                    </form>
                    <br />
                    <p id="form-text">Or log in <a href="/login" id="form-text">here</a></p>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/signup.js"></script>