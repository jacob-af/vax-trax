<div class="bg-gradient-login">
  <div class="row">
    <img id="logo" src="assets/img/VaxTrax_logo2.png" alt="VaxTrax Logo">
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="card" id="form-card">
          <h2>Login Form</h2>
          <form class="login">
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" class="form-control" id="form-text" placeholder="Email" aria-label="Enter email">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" class="form-control" id="form-text" placeholder="Password"
                aria-label="Enter password">
            </div>
            <button type="submit" class="btn btn-default">Login</button>
          </form>
          <br />
          <p id="form-text">Or sign up <a href="/" id="form-text">here</a></p>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/login.js"></script>