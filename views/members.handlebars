<div class="member-bg">

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <img class="navbar-brand" id="logo" src="./assets/img/VaxTrax_logo2.png" alt="Vax Trax logo">

        <button type="submit" class="btn btn-default" id="logout-button"><a class="logout" href="/logout">
                Logout
            </a>
        </button>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h2 id="welcome">Welcome <span class="member-name"></span></h2>
            </div>

            <div class="container">

                <div class="row">

                    <!-- Member Info Form -->

                    <div class="col-md-6">
                        <form id="member-info">
                            <div class="form-group">
                                <label for="exampleInputName">Name: </label>
                                <input type="input" class="form-control" id="member-name"
                                    aria-describedby="emailHelp" placeholder="Enter email">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Have you recieved the vaccine? </label>
                                <input type="input" class="form-control" id="isVaccinated"
                                    placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Which kind? </label>
                                <input type="input" class="form-control" id="vaxBrand"
                                    placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">What dose are you on? </label>
                                <input type="input" class="form-control" id="numDose"
                                    placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">When do/did you recieve the second dose? </label>
                                <input type="input" class="form-control" id="secondDose"
                                    placeholder="">
                            </div>
                            
                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                    </div>

                    <!-- Blog form --->
                    <div class="col-md-6">
                        <form id="cms">
                            <div class="form-group">
                                <label for="title">Title:</label>
                                <input type="text" class="form-control" id="title">
                                <br />
                                <label for="body">Body:</label>
                                <textarea class="form-control" rows="10" id="body"></textarea>
                                <div class="form-group">
                                    <label for="category">Select Category:</label>
                                    <select class="custom-select" id="category">
                                        <option value="General">General</option>
                                        <option value="Receiving First Dose">Receiving First Dose</option>
                                        <option value="First Dose Recovery">First Dose Recovery</option>
                                        <option value="Product Review">Product Review</option>
                                        <option value="Political">Political</option>
                                    </select>
                                </div>
                                <br />
                                <button type="submit" class="btn btn-success submit btn-lg">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Go to blog button --->
                <div class="row">
                    <div class="col-sm-2 mt-4">
                        <a class="btn btn-light" href="/blog">Go to Blog</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
    <div class="container">
        {{> cdctest}}
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/members.js"></script>