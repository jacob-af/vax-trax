<form id="userPostForm">
    <div class="form-group">
        <p id="doc-ex">Document Your Experience</p>
        <label for="category">Select A Post Category:</label>
        <select class="custom-select" id="category">
            <option value="General" selected>General</option>
            <option value="Scheduling First Dose">Scheduling First Dose</option>
            <option value="Receiving First Dose">Receiving First Dose</option>
            <option value="Recovering From First Dose">Recovering From First Dose</option>
            <option value="Receiving Second Dose">Receiving Second Dose</option>
            <option value="Recovering From Second Dose">Recovering From Second Dose</option>
        </select>
    </div>

    <div id="my-btns" class="btn-group" data-toggle="buttons">
        <label class="radio-inline">
            <input type="radio" name="vaccine-type" value="Moderna"> Moderna
        </label>
        <label class="radio-inline">
            <input type="radio" name="vaccine-type" value="Pfizer"> Pfizer
        </label>
        <label class="radio-inline">
            <input type="radio" name="vaccine-type" value="Johnson & Johnson"> J & J
        </label>
    </div>

    <div class="form-group">
        <label>
            Appointment Date:
            <input for="date" type="date" class="form-group" id="dateOfExperience">
        </label>
    </div>

    <div class="form-group">
        <label for="body">Body:</label>
        <textarea class="form-control" rows="3" id="body"></textarea>

    </div>

    <button type="submit" class="logsign-btn">Submit</button>
</form>
<!-- Custom Script -->
<script src="js/postUserStory.js" type="text/javascript"></script>